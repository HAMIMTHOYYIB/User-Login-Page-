<!-- editUser.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit User</title>
  <script>
    function displayErrorMessage() {
      document.getElementById('errorMessage').innerText = 'Current password is incorrect.';
      event.preventDefault();
    }
  </script>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 20px;
    }
    h1 {
        margin:15px;
      color: #333;
      text-align: center; /* Center the heading */
    }
    form {
      max-width: 400px;
      margin: 0 auto;
      background: #fff;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    label, input {
      display: block;
      margin-bottom: 20px;
    }
    input[type="text"],
    input[type="email"],
    input[type="password"] {
      width: calc(100% - 22px);
      padding:10px;
      border-radius: 8px;
      border: 1px solid #ccc;
      transition: border-color 0.3s;
    }
    input[type="text"][readonly] {
      background-color: #eee;
    }
    input[type="text"]:hover,
    input[type="email"]:hover,
    input[type="password"]:hover,
    input[type="text"]:focus,
    input[type="email"]:focus,
    input[type="password"]:focus {
      background-color: #eee;
      border-color: #4CAF50;
    }
    button[type="submit"] {
      background-color: #3498db;
      color: white;
      padding: 14px 28px;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      transition: 0.3s;
    }
    button[type="submit"]:hover {
      background-color: #2980b9;
    }
    small {
      display: block;
      margin-top:3px;
      margin-bottom:6px;
      font-size: 12px;
      color: #666;
    }
    label {
        font-weight:bold;
      display: inline-block;
      width: 150px;
      margin-right:10px;
      margin-bottom:4px;
      color: #333;
    }
    input[type="text"],
    input[type="email"],
    input[type="password"] {
      width:100%;
      padding: 12px;
      border-radius: 8px;
      border: 1px solid #ccc;
      transition: border-color 0.3s;
      margin-bottom:0px;
    }
    input[type="text"]:hover,
    input[type="email"]:hover,
    input[type="password"]:hover,
    input[type="text"]:focus,
    input[type="email"]:focus,
    input[type="password"]:focus {
      border-color: #4CAF50;
    }
    button[type="submit"],
    button[type="button"] {
      background-color: #3498db;
      color: white;
      padding: 12px 24px;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      transition: 0.3s;
      margin-top: 10px;
    }
    button[type="submit"]:hover,
    button[type="button"]:hover {
      background-color: #2980b9;
    }
    a button[type="button"] {
        float: inline-end;
      background-color: #e74c3c; /* Red shade color */
      transition: 0.3s;
    }
    a button[type="button"]:hover {
      background-color: #c0392b; /* Darker red shade color on hover */
    }
  </style>
</head>
<body>
  <h1>Edit User Details</h1>
  <form action="/edit" method="post">
    <label for="username">Username:</label>
    <input type="text" id="username" name="username" value="<%= user.username %>" readonly>
    <small>(Cannot change the username)</small>
    
    <label for="email">Email:</label>
    <input type="email" id="email" name="email" value="<%= user.email %>" >
    <small>Enter new email</small>
    
    <label for="currentPassword">Your Password:</label>
    <input type="password" id="currentPassword" name="currentPassword">
    <small id="errorMessage" style="color: red;"></small>
    <small>Enter your current password</small>
    
    <label for="newPassword">New Password:</label>
    <input type="password" id="newPassword" name="newPassword" placeholder="Leave blank to keep the current password">
    <small>Leave blank to keep current password</small>
    
    <button type="submit" onclick="displayErrorMessage()">Save Changes</button>
    <a href="/loggedin?username=<%= user.username %>"><button type="button">Cancel</button></a> <!-- Cancel button -->
  </form>
</body>
</html>